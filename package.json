{
  "name": "@deep-foundation/npm-automation",
  "keywords": [
    "deep",
    "package",
    "npm",
    "automation",
    "release",
    "pull",
    "install",
    "sync",
    "dependencies",
    "generate",
    "package",
    "class",
    "sync-dependencies",
    "synchronize-dependencies",
    "synchronize",
    "generate-package-class",
    "generate-package",
    "generate-class"
  ],
  "version": "18.1.6",
  "type": "module",
  "description": "Automates actions that you do in your deep package when you use npm",
  "repository": {
    "type": "git",
    "url": "https://github.com/deep-foundation/npm-automation"
  },
  "bin": {
    "npm-release": "./dist/cli/npm-release.js",
    "npm-pull": "./dist/cli/npm-pull.js",
    "npm-install": "./dist/cli/npm-install.js",
    "npm-sync-dependencies": "./dist/cli/npm-sync-dependencies.js",
    "generate-package-class": "./dist/cli/generate-package-class.js"
  },
  "scripts": {
    "library:build:clean": "fse remove dist && npm run library:build:dirty",
    "library:build:dirty": "ts-node --esm ./automation/library/build.ts",
    "library:build:generate-package-class": "generate-package-class",
    "documentation:generate": "ts-node --esm ./automation/documentation/generate.ts",
    "library:documentation:generate": "typedoc ./src/main.ts",
    "test": "jest"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "/dist"
  ],
  "license": "Unlicense",
  "dependencies": {
    "commander": "^10.0.1",
    "debug": "^4.3.4",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.6",
    "semver": "^7.5.1",
    "yargs": "^17.7.2",
    "@freephoenix888/generate-help-of-cli-apps-in-markdown-format": "^3.0.0",
    "@freephoenix888/generate-table-of-contents-for-markdown": "^4.0.13",
    "@freephoenix888/generate-usage-ways-of-npm-cli-apps-in-markdown-format": "^5.0.0"
  },
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.7",
    "@freephoenix888/prepend-file": "^1.0.0",
    "@types/debug": "^4.1.8",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/mock-fs": "^4.13.1",
    "@types/semver": "^7.5.0",
    "@types/yargs": "^17.0.24",
    "cross-env": "^7.0.3",
    "glob": "^10.3.3",
    "jest": "^29.6.1",
    "mock-fs": "^5.2.0",
    "replace": "^1.2.2",
    "replace-in-file": "^7.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "types-package-json": "^2.0.39",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@deep-foundation/deeplinks": "~0.0.298"
  }
}
